%.o : %.F
	$(IVFC) $(CFLAGS) -c $<

%.o : %.for
	$(IVFC) $(CFLAGS) -c $<

%.o : %.FOR
	$(IVFC) $(CFLAGS) -c $<

$(TARGET) : $(OBJ) 
	$(IVFC) $(LFLAGS) $@ $^
#	$(CP) $(TARGET) $(CP_TR_1)

clean:
	$(RM) *.o $(TARGET) *.mod

